<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/bubble" android:paddingLeft="5dp">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="New Text"
            android:id="@+id/messagesList_editText_nick" android:layout_gravity="center"
            android:paddingLeft="10dp" android:textSize="20dp" android:textStyle="bold|italic"
            android:textColor="#48e6ff"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="New Text"
            android:id="@+id/messagesList_editText_message" android:paddingLeft="40dp"/>
</LinearLayout>